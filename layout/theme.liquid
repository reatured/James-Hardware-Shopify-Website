<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>

  <!-- Basic page needs ================================================== -->
  <meta charset="utf-8">  

  {% if settings.favicon_enable %}
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% endif %}

  <!-- Title and description ================================================== -->
  <title>
  {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <!-- Social meta ================================================== -->
  {% include 'social-meta-tags' %}

  <!-- Helpers ================================================== -->
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">

  <!-- CSS ================================================== -->
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
	{{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}  
 	{{ 'font-awesome.css' | asset_url | stylesheet_tag }}  
 	{{ 'linea-ecommerce.css' | asset_url | stylesheet_tag }}  
  	{{ 'linea-arrow.css' | asset_url | stylesheet_tag }}  
  	{{ 'linea-basic.css' | asset_url | stylesheet_tag }}  
  	{{ 'pe-icon-7-stroke.css' | asset_url | stylesheet_tag }}  
  	{{ 'menu.css' | asset_url | stylesheet_tag }}  
  	{{ 'mobile-menu.css' | asset_url | stylesheet_tag }}  
  	{{ 'owl.carousel.css' | asset_url | stylesheet_tag }}
  	{{ 'owl.theme.css' | asset_url | stylesheet_tag }}  	
  	{{ 'theme.css' | asset_url | stylesheet_tag }}
  	{{ 'theme-responsive.css' | asset_url | stylesheet_tag }}
  	{% if settings.current_color != 'default' %}
  		{{ settings.current_color | append : '.css' | asset_url | stylesheet_tag }}
  	{% endif %}

  {% include 'google-fonts' %}

  <!-- Header hook for plugins ================================================== -->
  {{ content_for_header }}

  {% include 'oldIE-js' %}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
  {{ 'bootstrap.min.js' | asset_url | script_tag }}
  {{ 'megamenu.js' | asset_url | script_tag }}
  {{ 'mobile-menu.js' | asset_url | script_tag }}
  {{ 'jquery.jcarousel.min.js' | asset_url | script_tag }}
  {{ 'owl.carousel.js' | asset_url | script_tag }}
  
  
  {% include 'global-vars-js' %}
  {% comment %}
    If you store has customer accounts disabled, you can remove the following JS file
  {% endcomment %}
  {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% endif %}

</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
{% include 'mobile-nav' %}  
<div id="content-wrap"><div class="content">  
<header class="header-1">
  <div class="topbar"><div class="header-row row fullwidth">    
    <div class="navbar-logo col-lg-2 col-sm-2 col-md-2 col-xs-2">      	
          {% if settings.logo_use_image %}
             <a href="/" class="logo-wrapper">
               <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" />
             </a>
          {% else %}
              <a href="/">{{ shop.name }}</a>
          {% endif %}          
          
    </div>
    <div class="topbar-center col-lg-9 col-sm-10 col-md-9 col-xs-12">
      	{% include 'site-nav' %}
    </div>
    <div class="topbar-right col-lg-1 col-sm-2 col-md-1 col-xs-12">      	          
        <div class="header-block">
             {% include 'search-bar' %}
        </div>
      	<div class="header-block" id="cart-block">
          	<div class="btn-group compact-hidden">
              <a class="btn-xs dropdown-toggle box-group" href="/cart" data-toggle="dropdown">
                  <span class="icon icon-ecommerce-bag"></span>
                	<span class="{% if cart.item_count == 0 %} hidden-count{% endif %} box ajax_cart_quantity">{{ cart.item_count }}</span>	
              </a>
          	  {% include 'cart-dropdown' %}
          	</div>  
      	</div>  
      	<div class="header-block">
          <a id="options-top" href="#"><img src="{{ "setting.png" | asset_url }}" alt="Setting" /></a>
         	{% include 'setting-nav' %}
      	</div>  
    </div>
  </div></div>
</header>
<div class="quickview-box"></div>
{% include 'breadcrumb' %}  
{% if template != 'index' %}
<div class="container page-content">
{% endif %}  
{{ content_for_layout }}
{% if template != 'index' %}
</div>  
{% endif %}    
<footer>
  	<div class="footer-navbar">
      	<div class="footer-row">
			{% if settings.footer_quicklinks_enable %} 
          	<div class="menu-footer">
              	<ul>
                {% for link in linklists[settings.footer_quicklinks_linklist].links %}
                	<li><a href="{{ link.url }}">{{ link.title }}</a></li>
              	{% endfor %}  
              	</ul>  
          	</div> 
    		{% endif %}
        </div>    
  	</div>
  	{% if settings.footer_social_enable %}        
    {% include 'social-links' %}    
    {% endif %}
  	{% if settings.footer_contact_enable %}
        <div id="block_contact_infos"> 
        	{{ settings.footer_contact_text }}
        </div>
    {% endif %}
  	<div class="footer-bottom">
    	{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}. {{ powered_by_link }}
      	{% if settings.footer_show_methods_of_payment %}
        {% unless shop.enabled_payment_types == empty %}
        	<div class="logo-payment">           
             	<div class="paiement_logo_block">
               	{% for type in shop.enabled_payment_types %}                
                   <img src="{{ type | payment_type_img_url }}">                 
               	{% endfor %}
             	</div>
           	</div>         
         {% endunless %}
       {% endif %}
  	</div>  
</footer>
{% include 'message-modal' %}
{% if settings.enable_quick_view %}
    {% include 'quick-view' %}
{% endif %}    
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}  
  {{ 'jquery.history.js' | asset_url | script_tag }}
  {{ 'theme.js' | asset_url | script_tag }}
  {{ 'linked-product-options.js' | asset_url | script_tag }}
  {{ 'wish-list.js' | asset_url | script_tag }}
  {% if template contains 'product' %}    	
    {% if settings.product_image_zoom_type == 'fancybox'  %}
      {{ 'jquery.fancybox.js' | asset_url | script_tag }} 
  	  {{ 'jquery.fancybox.css' | asset_url | stylesheet_tag }}	
    {% elsif settings.product_image_zoom_type == 'zoom-in' %}
      {{ 'jquery.zoom.min.js' | asset_url | script_tag }}
    {% endif %}
  {% endif %}

  {% if template contains 'article' or template contains 'product' %}
    {% if settings.social_sharing_blog or settings.social_sharing_products %}
      {{ 'social-buttons.js' | asset_url | script_tag }}
    {% endif %}
  {% endif %}
</div></div>
<script>
jQuery(function() {
  jQuery('.swatch :radio').change(function() {
    var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
    var optionValue = jQuery(this).val();
    jQuery(this)
      .closest('form')
      .find('.single-option-selector')
      .eq(optionIndex)
      .val(optionValue)
      .trigger('change');
  });
});
</script>  
</body>
</html>
