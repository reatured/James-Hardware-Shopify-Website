<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_primary }}">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <!-- Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    <!-- Base CSS Variables -->
    <style>
      :root {
        /* Color Palette */
        --color-primary: {{ settings.color_primary }};
        --color-primary-foreground: {{ settings.color_primary | color_lighten: 90 }};
        --color-secondary: {{ settings.color_secondary }};
        --color-secondary-foreground: {{ settings.color_secondary | color_darken: 80 }};
        --color-background: {{ settings.color_background }};
        --color-foreground: {{ settings.color_foreground }};
        --color-muted: {{ settings.color_secondary }};
        --color-muted-foreground: {{ settings.color_foreground | color_mix: settings.color_background, 60 }};
        --color-border: {{ settings.color_primary | color_mix: settings.color_background, 20 }};
        --color-ring: {{ settings.color_primary }};
        --color-destructive: #E11D48;
        --color-success: #16A34A;

        /* Typography */
        --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
        --font-body: {{ settings.font_body.family }}, {{ settings.font_body.fallback_families }};
        
        /* Font Sizes */
        --font-size-xs: 12px;
        --font-size-sm: 14px;
        --font-size-base: 16px;
        --font-size-lg: 18px;
        --font-size-xl: 20px;
        --font-size-2xl: 24px;
        --font-size-3xl: 30px;
        --font-size-4xl: 36px;
        --font-size-5xl: 48px;

        /* Line Heights */
        --line-height-tight: 1.2;
        --line-height-normal: 1.5;
        --line-height-relaxed: 1.75;

        /* Spacing */
        --spacing-page-width: {{ settings.page_width }}px;
        --spacing-sidebar-width: {{ settings.sidebar_width }}px;
        --spacing-grid-gap: 2rem;
        --spacing-content-padding: 2rem;
      }

      /* Base Styles */
      body {
        font-family: var(--font-body);
        font-size: var(--font-size-base);
        line-height: var(--line-height-normal);
        color: var(--color-foreground);
        background-color: var(--color-background);
        margin: 0;
        min-height: 100vh;
        display: flex;
      }

      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
        line-height: var(--line-height-tight);
        margin: 0;
      }

      /* Layout Structure */
      .site-wrapper {
        display: flex;
        width: 100%;
        min-height: 100vh;
      }

      /* Sidebar Styles */
      .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        width: var(--spacing-sidebar-width);
        height: 100vh;
        z-index: 10;
        background-color: var(--color-background);
        border-right: 1px solid var(--color-border);
        overflow-y: auto;
        transition: transform 0.3s ease;
      }

      /* Main Content Styles */
      .main-content-wrapper {
        flex: 1;
        margin-left: var(--spacing-sidebar-width);
        width: calc(100% - var(--spacing-sidebar-width));
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .main-content {
        flex: 1;
        width: 100%;
        max-width: var(--spacing-page-width);
        margin: 0 auto;
        padding: var(--spacing-content-padding);
        box-sizing: border-box;
      }

      /* Mobile Menu Button */
      .mobile-menu-button {
        display: none;
        position: fixed;
        top: 1rem;
        left: 1rem;
        z-index: 1000;
        background: var(--color-background);
        border: 1px solid var(--color-border);
        padding: 0.5rem;
        border-radius: 0.25rem;
        cursor: pointer;
      }

      /* Responsive Styles */
      @media screen and (max-width: 768px) {
        .site-wrapper {
          flex-direction: column;
        }

        .sidebar {
          transform: translateX(-100%);
          position: fixed;
          width: 100%;
          max-width: 300px;
        }

        .sidebar.active {
          transform: translateX(0);
        }

        .main-content-wrapper {
          margin-left: 0;
          width: 100%;
        }

        .mobile-menu-button {
          display: block;
        }

        .main-content {
          padding: var(--spacing-content-padding);
        }
      }

      /* Utility Classes */
      .visually-hidden {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
      }
    </style>

    {{ content_for_header }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
  </head>

  <body>
    <a class="visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>

    <button class="mobile-menu-button" aria-label="Toggle menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 12H21M3 6H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <div class="site-wrapper">
      <div class="sidebar">
        {% section 'sidebar' %}
      </div>
      
      <div class="main-content-wrapper">
        <main id="MainContent" class="main-content" role="main" tabindex="-1">
      {{ content_for_layout }}
          
          {% section 'footer' %}
    </main>
      </div>
    </div>

    <!-- Base JavaScript -->
    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const sidebar = document.querySelector('.sidebar');
        const mainContent = document.querySelector('.main-content');

        if (mobileMenuButton && sidebar) {
          mobileMenuButton.addEventListener('click', function() {
            sidebar.classList.toggle('active');
            document.body.style.overflow = sidebar.classList.contains('active') ? 'hidden' : '';
          });

          // Close sidebar when clicking outside on mobile
          mainContent.addEventListener('click', function() {
            if (sidebar.classList.contains('active')) {
              sidebar.classList.remove('active');
              document.body.style.overflow = '';
            }
          });
        }
      });
    </script>
  </body>
</html>
