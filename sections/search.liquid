{%- style -%}
  .search {
    max-width: var(--spacing-page-width);
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .search__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .search__title {
    font-size: var(--font-size-3xl);
    margin-bottom: 1rem;
  }

  .search__form {
    max-width: 600px;
    margin: 0 auto;
    position: relative;
  }

  .search__input {
    width: 100%;
    padding: 1rem 3rem 1rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    font-size: var(--font-size-base);
    background: var(--color-background);
    color: var(--color-foreground);
  }

  .search__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px var(--color-ring);
  }

  .search__button {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-foreground);
  }

  .search__button:hover {
    color: var(--color-primary);
  }

  .search__results {
    margin-top: 3rem;
  }

  .search__results-title {
    font-size: var(--font-size-xl);
    margin-bottom: 2rem;
  }

  .search__products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .search__product {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .search__product-image {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .search__product-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .search__product-title {
    font-size: var(--font-size-lg);
    font-weight: 500;
  }

  .search__product-price {
    font-weight: 500;
  }

  .search__product-compare-price {
    text-decoration: line-through;
    color: var(--color-muted-foreground);
    margin-left: 0.5rem;
  }

  .search__empty {
    text-align: center;
    padding: 4rem 2rem;
  }

  .search__empty-title {
    font-size: var(--font-size-2xl);
    margin-bottom: 1rem;
  }

  .search__empty-text {
    color: var(--color-muted-foreground);
    margin-bottom: 2rem;
  }

  .search__empty-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary);
    color: var(--color-primary-foreground);
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background-color 0.2s ease;
  }

  .search__empty-button:hover {
    background: var(--color-ring);
  }

  .search__predictive {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    margin-top: 0.5rem;
    padding: 1rem;
    display: none;
  }

  .search__predictive.active {
    display: block;
  }

  .search__predictive-title {
    font-size: var(--font-size-sm);
    color: var(--color-muted-foreground);
    margin-bottom: 0.5rem;
  }

  .search__predictive-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .search__predictive-item {
    padding: 0.5rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .search__predictive-item:hover {
    background: var(--color-muted);
  }
{%- endstyle -%}

<div class="search">
  <div class="search__header">
    <h1 class="search__title">Search</h1>
  </div>

  <form action="{{ routes.search_url }}" method="get" class="search__form">
    <input
      type="search"
      name="q"
      class="search__input"
      placeholder="Search products..."
      value="{{ search.terms | escape }}"
      autocomplete="off"
      {% if settings.predictive_search_enabled %}
        role="combobox"
        aria-expanded="false"
        aria-owns="predictive-search-results"
        aria-controls="predictive-search-results"
        aria-haspopup="listbox"
        aria-autocomplete="list"
        autocorrect="off"
        autocomplete="off"
        autocapitalize="off"
        spellcheck="false"
      {% endif %}
    >
    <button type="submit" class="search__button" aria-label="Search">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"/>
        <path d="M21 21l-4.35-4.35"/>
      </svg>
    </button>

    {% if settings.predictive_search_enabled %}
      <div class="search__predictive" id="predictive-search-results" role="listbox">
        <div class="search__predictive-title">Products</div>
        <ul class="search__predictive-list" role="list">
          {%- for product in search.results -%}
            <li class="search__predictive-item" role="option">
              <a href="{{ product.url }}">
                <div class="search__product">
                  <img
                    class="search__product-image"
                    src="{{ product.featured_image | image_url: width: 100 }}"
                    alt="{{ product.title | escape }}"
                    width="100"
                    height="100"
                    loading="lazy"
                  >
                  <div class="search__product-info">
                    <h3 class="search__product-title">{{ product.title }}</h3>
                    <div class="search__product-price">
                      {{ product.price | money }}
                      {%- if product.compare_at_price > product.price -%}
                        <span class="search__product-compare-price">
                          {{ product.compare_at_price | money }}
                        </span>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {% endif %}
  </form>

  {%- if search.performed -%}
    <div class="search__results">
      <h2 class="search__results-title">
        {%- if search.results_count == 0 -%}
          No results found for "{{ search.terms | escape }}"
        {%- else -%}
          {{ search.results_count }} results for "{{ search.terms | escape }}"
        {%- endif -%}
      </h2>

      {%- if search.results_count > 0 -%}
        <div class="search__products">
          {%- for product in search.results -%}
            <div class="search__product">
              <a href="{{ product.url }}">
                <img
                  class="search__product-image"
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.title | escape }}"
                  width="400"
                  height="400"
                  loading="lazy"
                >
              </a>
              <div class="search__product-info">
                <h3 class="search__product-title">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>
                <div class="search__product-price">
                  {{ product.price | money }}
                  {%- if product.compare_at_price > product.price -%}
                    <span class="search__product-compare-price">
                      {{ product.compare_at_price | money }}
                    </span>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="search__empty">
          <h3 class="search__empty-title">No results found</h3>
          <p class="search__empty-text">
            Try adjusting your search or filter to find what you're looking for.
          </p>
          <a href="{{ routes.all_products_collection_url }}" class="search__empty-button">
            View all products
          </a>
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Search",
  "settings": []
}
{% endschema %} 