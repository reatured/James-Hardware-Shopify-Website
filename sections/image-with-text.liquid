                    class="button button--secondary copy-all-images-btn"
                    onclick="copyAllProductImages('{{ section.settings.image | image_url: width: 1500 }}')"
                    style="margin-left: 10px; font-size: 12px; padding: 8px 12px;"
                  >
                    ðŸ“‹ Copy All Images
                  </button>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function copyImageAddress(imageUrl, button) {
  // Get the current domain
  const currentDomain = window.location.origin;
  
  // Extract the clean image URL without parameters
  let cleanUrl = imageUrl;
  
  // Remove query parameters (everything after ?)
  if (cleanUrl.includes('?')) {
    cleanUrl = cleanUrl.split('?')[0];
  }
  
  // If the URL doesn't start with http, add the domain
  if (!cleanUrl.startsWith('http')) {
    cleanUrl = currentDomain + cleanUrl;
  }
  
  // Create a temporary input element
  const tempInput = document.createElement('input');
  tempInput.value = cleanUrl;
  document.body.appendChild(tempInput);
  
  // Select and copy the text
  tempInput.select();
  tempInput.setSelectionRange(0, 99999); // For mobile devices
  document.execCommand('copy');
  
  // Remove the temporary input
  document.body.removeChild(tempInput);
  
  // Update button appearance
  const originalText = button.innerHTML;
  button.innerHTML = `
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
    </svg>
    Copied!
  `;
  button.classList.add('copied');
  
  // Reset button after 2 seconds
  setTimeout(() => {
    button.innerHTML = originalText;
    button.classList.remove('copied');
  }, 2000);
}

function copyAllProductImages(sectionImageUrl) {
  // Get the current domain
  const currentDomain = window.location.origin;
  
  // Get all product images from the page
  const productImages = [];
  
  // Get images from product gallery
  const galleryImages = document.querySelectorAll('.product__media img, .product-gallery img, .product__media-item img');
  galleryImages.forEach(img => {
    if (img.src && !productImages.includes(img.src)) {
      let cleanUrl = img.src;
      if (cleanUrl.includes('?')) {
        cleanUrl = cleanUrl.split('?')[0];
      }
      if (!cleanUrl.startsWith('http')) {
        cleanUrl = currentDomain + cleanUrl;
      }
      productImages.push(cleanUrl);
    }
  });
  
  // Get images from product thumbnails
  const thumbnailImages = document.querySelectorAll('.product__thumbnail img, .product-thumbnail img');
  thumbnailImages.forEach(img => {
    if (img.src && !productImages.includes(img.src)) {
      let cleanUrl = img.src;
      if (cleanUrl.includes('?')) {
        cleanUrl = cleanUrl.split('?')[0];
      }
      if (!cleanUrl.startsWith('http')) {
        cleanUrl = currentDomain + cleanUrl;
      }
      productImages.push(cleanUrl);
    }
  });
  
  // Add the current section image if it's not already included
  let cleanSectionUrl = sectionImageUrl;
  if (cleanSectionUrl.includes('?')) {
    cleanSectionUrl = cleanSectionUrl.split('?')[0];
  }
  if (!cleanSectionUrl.startsWith('http')) {
    cleanSectionUrl = currentDomain + cleanSectionUrl;
  }
  if (!productImages.includes(cleanSectionUrl)) {
    productImages.push(cleanSectionUrl);
  }
  
  // Format for Excel (one URL per line)
  const excelFormattedUrls = productImages.join('\n');
  
  // Create a temporary textarea element
  const tempTextarea = document.createElement('textarea');
  tempTextarea.value = excelFormattedUrls;
  tempTextarea.style.position = 'fixed';
  tempTextarea.style.opacity = '0';
  document.body.appendChild(tempTextarea);
  
  // Select and copy the text
  tempTextarea.select();
  tempTextarea.setSelectionRange(0, 99999); // For mobile devices
  document.execCommand('copy');
  
  // Remove the temporary textarea
  document.body.removeChild(tempTextarea);
  
  // Show success message
  const button = document.querySelector('.copy-all-images-btn');
  if (button) {
    const originalText = button.innerHTML;
    button.innerHTML = `âœ… Copied ${productImages.length} images!`;
    button.style.background = '#28a745';
    button.style.color = 'white';
    
    // Reset button after 3 seconds
    setTimeout(() => {
      button.innerHTML = originalText;
      button.style.background = '';
      button.style.color = '';
    }, 3000);
  }
  
  // Show alert with count
  alert(`Copied ${productImages.length} image URLs to clipboard!\n\nYou can now paste them into Excel - each URL will be in a separate row.`);
}
</script>

