{%- style -%}
  .slideshow {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .slideshow__slide {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: {{ section.settings.slide_height | default: '50%' }};
  }

  .slideshow__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .slideshow__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .slideshow__text-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .slideshow__text {
    max-width: {{ section.settings.text_width }}px;
    padding: {{ section.settings.text_padding }}rem;
    text-align: center;
    background: {{ section.settings.text_background }};
    border-radius: {{ section.settings.text_border_radius }}rem;
    backdrop-filter: blur({{ section.settings.text_blur }}px);
  }

  .banner__heading {
    font-size: {{ section.settings.heading_size }}rem;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin }}rem;
    line-height: {{ section.settings.heading_line_height }};
  }

  .banner__text {
    font-size: {{ section.settings.text_size }}rem;
    color: {{ section.settings.text_color }};
    margin-bottom: {{ section.settings.text_margin }}rem;
    line-height: {{ section.settings.text_line_height }};
  }

  .banner__buttons {
    display: flex;
    gap: {{ section.settings.button_gap }}rem;
    justify-content: center;
  }

  .button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}rem {{ section.settings.button_padding_horizontal }}rem;
    border-radius: {{ section.settings.button_border_radius }}rem;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .button--primary {
    background: {{ section.settings.primary_button_background }};
    color: {{ section.settings.primary_button_text_color }};
  }

  .button--primary:hover {
    background: {{ section.settings.primary_button_hover_background }};
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .button--secondary {
    background: transparent;
    border: 2px solid {{ section.settings.secondary_button_border_color }};
    color: {{ section.settings.secondary_button_text_color }};
  }

  .button--secondary:hover {
    background: {{ section.settings.secondary_button_hover_background }};
    color: {{ section.settings.secondary_button_hover_text_color }};
    transform: translateY(-2px);
  }

  .slideshow__controls {
    position: absolute;
    bottom: {{ section.settings.controls_margin }}rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: {{ section.settings.controls_gap }}rem;
    z-index: 2;
  }

  .slider-button {
    width: {{ section.settings.controls_size }}px;
    height: {{ section.settings.controls_size }}px;
    border-radius: 50%;
    background: {{ section.settings.controls_background }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .slider-button:hover {
    background: {{ section.settings.controls_hover_background }};
  }

  .slider-counter {
    display: flex;
    gap: {{ section.settings.dots_gap }}rem;
  }

  .slider-counter__link {
    width: {{ section.settings.dots_size }}px;
    height: {{ section.settings.dots_size }}px;
    border-radius: 50%;
    background: {{ section.settings.dots_background }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .slider-counter__link.active {
    background: {{ section.settings.dots_active_background }};
  }

  .slideshow__autoplay {
    width: {{ section.settings.controls_size }}px;
    height: {{ section.settings.controls_size }}px;
    border-radius: 50%;
    background: {{ section.settings.controls_background }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .slideshow__autoplay:hover {
    background: {{ section.settings.controls_hover_background }};
  }

  @media (max-width: 768px) {
    .banner__heading {
      font-size: {{ section.settings.mobile_heading_size }}rem;
    }

    .banner__text {
      font-size: {{ section.settings.mobile_text_size }}rem;
    }

    .slideshow__text {
      padding: {{ section.settings.mobile_text_padding }}rem;
    }

    .button {
      padding: {{ section.settings.mobile_button_padding_vertical }}rem {{ section.settings.mobile_button_padding_horizontal }}rem;
    }
  }
{%- endstyle -%}
