{%- style -%}
  .hero-banner {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to right,
      {{ section.settings.overlay_color | color_modify: 'alpha', 0.8 }},
      {{ section.settings.overlay_color | color_modify: 'alpha', 0.4 }}
    );
    z-index: 1;
  }

  .hero-banner-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    color: {{ section.settings.text_color }};
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-description {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 600px;
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-button {
    display: inline-block;
    padding: 1rem 2rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .hero-button-primary {
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
  }

  .hero-button-primary:hover {
    background: {{ section.settings.button_hover_background }};
  }

  .hero-button-secondary {
    background: transparent;
    color: {{ section.settings.text_color }};
    border: 2px solid {{ section.settings.text_color }};
  }

  .hero-button-secondary:hover {
    background: {{ section.settings.text_color }};
    color: {{ section.settings.background_color }};
  }

  @media (max-width: 768px) {
    .hero-banner {
      min-height: 400px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-button {
      padding: 0.75rem 1.5rem;
    }
  }
{%- endstyle -%}

<div class="hero-banner">
  {% if section.settings.background_image != blank %}
    <img
      class="hero-banner-image"
      src="{{ section.settings.background_image | img_url: '2000x' }}"
      alt="{{ section.settings.title }}"
      width="2000"
      height="1000"
      loading="eager"
    >
  {% endif %}

  <div class="hero-content">
    {% if section.settings.subtitle != blank %}
      <div class="hero-subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}

    <h1 class="hero-title">{{ section.settings.title }}</h1>

    {% if section.settings.description != blank %}
      <div class="hero-description">{{ section.settings.description }}</div>
    {% endif %}

    <div class="hero-buttons">
      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button hero-button-primary">
          {{ section.settings.button_text }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="hero-button hero-button-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

