<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      body {
        padding-top: 0;
        padding-bottom: 0;
        margin-top: 0;
        margin-bottom: 0;
      }

      .embed-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
        max-width: 100%;
        background: #f0f0f0;
      }

      .embed-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
      }
    </style>
  </head>

  <body>
    <!-- Embed Website -->
    <div class="embed-container">
      <iframe src="{{ section.settings.embed_url }}" allowfullscreen></iframe>
    </div>
  </body>

  {% schema %}
{
  "name": "Embed Website",
  "settings": [
    {
      "type": "url",
      "id": "embed_url",
      "label": "Embed URL",

    }
  ],
  "presets": [
    {
      "name": "Embed Website",
      "category": "Custom"
    }
  ]
}
  {% endschema %}
</html>
