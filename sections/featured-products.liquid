{%- style -%}
  .featured-products {
    padding: 4rem 1rem;
    background: {{ section.settings.background_color }};
  }

  .featured-products-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2rem;
    color: {{ section.settings.text_color }};
    margin-bottom: 1rem;
  }

  .section-description {
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .product-card {
    background: {{ section.settings.card_background }};
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-image {
    position: relative;
    padding-top: 100%;
    background: {{ section.settings.image_background }};
  }

  .product-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info {
    padding: 1.5rem;
  }

  .product-title {
    font-size: 1.1rem;
    color: {{ section.settings.text_color }};
    margin-bottom: 0.5rem;
  }

  .product-price {
    color: {{ section.settings.price_color }};
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .product-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 0.25rem;
    transition: background-color 0.3s ease;
  }

  .product-button:hover {
    background: {{ section.settings.button_hover_color }};
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
    }
  }
{%- endstyle -%}

<div class="featured-products">
  <div class="featured-products-container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <p class="section-description">{{ section.settings.description }}</p>
    </div>

    <div class="products-grid">
      {% for product in collections[section.settings.collection].products limit: section.settings.products_to_show %}
        <div class="product-card">
          <div class="product-image">
            <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" width="400" height="400">
          </div>
          <div class="product-info">
            <h3 class="product-title">{{ product.title }}</h3>
            <div class="product-price">{{ product.price | money }}</div>
            <a href="{{ product.url }}" class="product-button">View Details</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Discover our best-selling hardware products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select the collection to display products from"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 6,
      "label": "Number of products to show"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "image_background",
      "label": "Image Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "price_color",
      "label": "Price Color",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button Hover Color",
      "default": "#0056b3"
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "title": "Featured Products",
        "description": "Discover our best-selling hardware products",
        "products_to_show": 6
      }
    }
  ]
}
{% endschema %} 