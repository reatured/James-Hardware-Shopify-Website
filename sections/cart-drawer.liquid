{%- style -%}
  .cart-drawer {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 450px;
    height: 100vh;
    background: var(--color-background);
    border-left: 1px solid var(--color-border);
    padding: 2rem;
    overflow-y: auto;
    transition: right 0.3s ease;
  }

  .cart-drawer.active {
    right: 0;
  }

  .cart-drawer__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .cart-drawer__title {
    font-size: var(--font-size-xl);
    margin: 0;
  }

  .cart-drawer__close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-foreground);
  }

  .cart-drawer__items {
    margin-bottom: 2rem;
  }

  .cart-drawer__item {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .cart-drawer__item-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
  }

  .cart-drawer__item-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cart-drawer__item-title {
    font-weight: 500;
  }

  .cart-drawer__item-variant {
    color: var(--color-muted-foreground);
    font-size: var(--font-size-sm);
  }

  .cart-drawer__item-price {
    font-weight: 500;
  }

  .cart-drawer__item-remove {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-destructive);
  }

  .cart-drawer__footer {
    margin-top: 2rem;
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: var(--font-size-lg);
    font-weight: 500;
  }

  .cart-drawer__checkout {
    width: 100%;
    padding: 1rem;
    background: var(--color-primary);
    color: var(--color-primary-foreground);
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .cart-drawer__checkout:hover {
    background: var(--color-ring);
  }

  .cart-drawer__empty {
    text-align: center;
    padding: 2rem;
  }

  .cart-drawer__empty-title {
    font-size: var(--font-size-xl);
    margin-bottom: 1rem;
  }

  .cart-drawer__empty-text {
    color: var(--color-muted-foreground);
    margin-bottom: 2rem;
  }

  .cart-drawer__empty-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary);
    color: var(--color-primary-foreground);
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background-color 0.2s ease;
  }

  .cart-drawer__empty-button:hover {
    background: var(--color-ring);
  }
{%- endstyle -%}

<div class="cart-drawer">
  <div class="cart-drawer__header">
    <h2 class="cart-drawer__title">Your Cart</h2>
    <button class="cart-drawer__close" aria-label="Close cart">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>
  </div>

  {%- if cart.item_count > 0 -%}
    <div class="cart-drawer__items">
      {%- for item in cart.items -%}
        <div class="cart-drawer__item">
          <img
            class="cart-drawer__item-image"
            src="{{ item.image | image_url: width: 200 }}"
            alt="{{ item.title | escape }}"
            width="100"
            height="100"
            loading="lazy"
          >
          <div class="cart-drawer__item-details">
            <h3 class="cart-drawer__item-title">{{ item.title }}</h3>
            {%- if item.variant.title != 'Default Title' -%}
              <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
            {%- endif -%}
            <p class="cart-drawer__item-price">{{ item.price | money }}</p>
          </div>
          <button class="cart-drawer__item-remove" data-line-item="{{ item.key }}">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
          </button>
        </div>
      {%- endfor -%}
    </div>

    <div class="cart-drawer__footer">
      <div class="cart-drawer__subtotal">
        <span>Subtotal</span>
        <span>{{ cart.total_price | money }}</span>
      </div>
      <button class="cart-drawer__checkout" type="submit" name="checkout">
        Checkout
      </button>
    </div>
  {%- else -%}
    <div class="cart-drawer__empty">
      <h3 class="cart-drawer__empty-title">Your cart is empty</h3>
      <p class="cart-drawer__empty-text">Looks like you haven't added any items to your cart yet.</p>
      <a href="{{ routes.all_products_collection_url }}" class="cart-drawer__empty-button">
        Continue Shopping
      </a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Cart Drawer",
  "settings": []
}
{% endschema %}
