{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 3rem 1rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-link {
    margin-bottom: 0.5rem;
  }

  .footer-link a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 0.5rem;
    border: 1px solid {{ section.settings.text_color }};
    background: transparent;
    color: {{ section.settings.text_color }};
  }

  .newsletter-button {
    padding: 0.5rem 1rem;
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    cursor: pointer;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-link {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 1.5rem;
  }

  .copyright {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid {{ section.settings.text_color }};
  }
{%- endstyle -%}

<footer class="footer">
  <div class="footer-container">
    <div class="footer-section">
      <h3>About Us</h3>
      <p>{{ section.settings.about_text }}</p>
    </div>

    <div class="footer-section">
      <h3>Quick Links</h3>
      <ul class="footer-links">
        {% for link in linklists[section.settings.footer_menu].links %}
          <li class="footer-link">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="footer-section">
      <h3>Newsletter</h3>
      <form class="newsletter-form">
        <input type="email" class="newsletter-input" placeholder="Your email" required>
        <button type="submit" class="newsletter-button">Subscribe</button>
      </form>
    </div>

    <div class="footer-section">
      <h3>Follow Us</h3>
      <div class="social-links">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" class="social-link">f</a>
        {% endif %}
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" class="social-link">i</a>
        {% endif %}
        {% if section.settings.twitter_url != blank %}
          <a href="{{ section.settings.twitter_url }}" class="social-link">t</a>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="copyright">
    &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About Text",
      "default": "James Hardware is your trusted source for quality hardware products and expert advice."
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
