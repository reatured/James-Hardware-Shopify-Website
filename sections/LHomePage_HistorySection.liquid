{% schema %}
{
  "name": "Company History",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color for Middle Cells",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "company_title",
      "label": "Company Title",
      "default": "Our History"
    },
    {
      "type": "text",
      "id": "subtitle1",
      "label": "Subtitle 1",
      "default": "Subtitle 1"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1",
      "default": "Enter text for the first section."
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "subtitle2",
      "label": "Subtitle 2",
      "default": "Subtitle 2"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2",
      "default": "Enter text for the second section."
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "subtitle3",
      "label": "Subtitle 3",
      "default": "Subtitle 3"
    },
    {
      "type": "textarea",
      "id": "text3",
      "label": "Text 3",
      "default": "Enter text for the third section."
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "subtitle4",
      "label": "Subtitle 4",
      "default": "Subtitle 4"
    },
    {
      "type": "textarea",
      "id": "text4",
      "label": "Text 4",
      "default": "Enter text for the fourth section."
    },
    {
      "type": "image_picker",
      "id": "image4",
      "label": "Image 4"
    }
  ],
  "presets": [
    {
      "name": "Company History",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div class="company-history">
  <!-- Company Title -->
  <h2>{{ section.settings.company_title }}</h2>

  <div class="company-history-grid">
    <!-- Row 1 -->
    <div class="text">
      <h3>{{ section.settings.subtitle1 }}</h3>
      <p>{{ section.settings.text1 }}</p>
    </div>
    <div class="middle" style="background-color: {{ section.settings.bg_color }};">
      <span>2</span>
    </div>
    <div class="image">
      {% if section.settings.image1 != blank %}
        <img src="{{ section.settings.image1 | img_url: 'medium' }}" alt="Company Image 1">
      {% endif %}
    </div>

    <!-- Row 2 -->
    <div class="image">
      {% if section.settings.image2 != blank %}
        <img src="{{ section.settings.image2 | img_url: 'medium' }}" alt="Company Image 2">
      {% endif %}
    </div>
    <div class="middle" style="background-color: {{ section.settings.bg_color }};">
      <span>5</span>
    </div>
    <div class="text">
      <h3>{{ section.settings.subtitle2 }}</h3>
      <p>{{ section.settings.text2 }}</p>
    </div>

    <!-- Row 3 -->
    <div class="text">
      <h3>{{ section.settings.subtitle3 }}</h3>
      <p>{{ section.settings.text3 }}</p>
    </div>
    <div class="middle" style="background-color: {{ section.settings.bg_color }};">
      <span>8</span>
    </div>
    <div class="image">
      {% if section.settings.image3 != blank %}
        <img src="{{ section.settings.image3 | img_url: 'medium' }}" alt="Company Image 3">
      {% endif %}
    </div>

    <!-- Row 4 -->
    <div class="image">
      {% if section.settings.image4 != blank %}
        <img src="{{ section.settings.image4 | img_url: 'medium' }}" alt="Company Image 4">
      {% endif %}
    </div>
    <div class="middle" style="background-color: {{ section.settings.bg_color }};">
      <span>11</span>
    </div>
    <div class="text">
      <h3>{{ section.settings.subtitle4 }}</h3>
      <p>{{ section.settings.text4 }}</p>
    </div>
  </div>
</div>

<style>
  .company-history {
    text-align: center;
    margin: 40px auto;
  }
  .company-history h2 {
    font-size: 2rem;
    margin-bottom: 20px;
  }
  .company-history-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
    text-align: left;
  }
              .company-history .text {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 0;
        padding: 0;
      }
      .company-history .image {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 0;
      }
      .company-history .image img {
        max-width: 100%;
        height: auto;
        margin: 0;
        padding: 0;
      }
      .company-history .middle {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 0;
      }
      .company-history-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 2fr; /* Middle cell takes 1/5 of the width */
        gap: 0; /* Remove gaps between cells */
        text-align: left;
      }
  .company-history h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
  .company-history p {
    font-size: 1rem;
    margin: 10px 0;
  }
</style>
