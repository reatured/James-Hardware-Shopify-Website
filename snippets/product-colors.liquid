{% assign colortotal = settings.productbox_color_total | plus:0 %}

{% for option in product.options %}
  {% if option == 'Color' %}
    {% assign index = forloop.index0 %}
    {% assign colorlist = '' %}
    {% assign color = '' %}
	<ul class="item-colors">
    {% for variant in product.variants %}
  	  {% assign cindex = forloop.index0 %}
      {% capture color %}
        {{ variant.options[index] }}
      {% endcapture %}
      {% unless colorlist contains color %}  
      {% assign text = color | handleize %}
  
	  {% if cindex < colortotal  %}	
      <li>
        <label style="background-color: {{ color | split: ' ' | last | handle }}; background-image: url({{ text | append: '.png' | file_url }});"></label>

        {% if variant.image != null %}
        <div class="hidden">
          <a href="{{ variant.image.src | product_img_url: 'large' }}"></a>
        </div>
        {% endif %}
      </li>
	  {% endif %}	
        {% capture tempList %}
          {{ colorlist | append: color | append: ' ' }}
        {% endcapture %}

        {% assign colorlist = tempList %}
      {% endunless %}

    {% endfor %}
    </ul>
  {% endif %}
{% endfor %}
