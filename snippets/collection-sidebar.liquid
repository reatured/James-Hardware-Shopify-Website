
{% if settings.collection_sidebar_categories %}
  	<div class="block categories-block">
      <h3 class="block-title">{{ settings.collection_sidebar_categories_title }}</h3>
      <div class="block-content">
        	<ul>
        	{% if settings.collection_sidebar_categories_show == 'show_all' %}        	
              {% for category in collections %}
              <li>
                <a href="{{ category.url }}" {% if collection.handle == category.handle %}class="active"{% endif %}>                
                    <span>{{ category.title }}</span>                
                </a>
              </li>     
              {% endfor %}        	
        	{% else %}
              {% assign items = settings.categories_items | split:"," | strip | downcase %}
              {% for category in collections %}
              {% assign cat = category.title | downcase %}
              {% if items contains cat %}
              <li>
                <a href="{{ category.url }}" {% if collection.handle == category.handle %}class="active"{% endif %}>                  
                    <span>{{ category.title }}</span>                  
                </a>
              </li>     
              {% endif %}
              {% endfor %}
        	{% endif %}
            </ul>    
      </div> 	
  	</div> 
  	{% include 'collection-shop-by' %}
	{% if settings.collection_banner_sidebar %}
		<a href="{{ settings.collection_banner_sidebar_link }}"><img class="img-responsive" src="{{ "collection-banner-sidebar.jpg" | asset_url }}" alt="Banner" /></a>
	{% endif %}
{% endif %}
