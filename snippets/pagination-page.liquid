{% comment %}

  This snippet renders a custom widget based on the current 'paginate' context,
  defined in { % paginate XXXX by 5 % } tags wrapping the content.
  The example below breaks the pagination down so you can setup your own styles and behavior if you wish.

  Basic Pagination Usage:
    <div class="pagination">
      {{ paginate | default_pagination }}
    </div>

  Replace Text:
    <div class="pagination">
      {{ paginate | default_pagination | replace: 'Previous', 'Newer articles' | replace: 'Next', 'Older articles' }}
    </div>

  More information:
   - index#pagination
   - http://docs.shopify.com/themes/liquid-variables/paginate

{% endcomment %}

{% if settings.collection_infinite_scrolling %}
  {% if paginate.next %}    
    <div class="infinite-scrolling">
      <a href="{{ paginate.next.url }}">
        {{ 'collections.general.show_more' | t}}
      </a>
      <a href="javascript:void(0)" class="disabled" style="display:none">
        {{ 'collections.general.no_more_product' | t}} 
      </a>  
    </div>
  {% endif %}
{% else %}

<div class="toolbar toolbar-bottom">
  <p class="page-total">
    <span>{{ 'collections.toolbar.showing' | t }}</span>: 
    {{ paginate.current_offset | plus: 1 }} -
    {% if paginate.next %}
      {{ paginate.current_offset | plus: paginate.page_size }}
    {% else %}
      {{ paginate.items }}
    {% endif %}
    <span>{{ 'collections.toolbar.of' | t }}</span>
    {{ paginate.items }}
  </p>

  <ul class="pagination-page">
    {% if paginate.previous %}
    <li class="text"><a href="{{ paginate.previous.url }}" title="{{ 'collections.toolbar.previous' | t }}"><span>{{ 'collections.toolbar.previous' | t }}</span></a></li>
    {% else %}
    <li class="disabled"><span>{{ 'collections.toolbar.previous' | t }}</span></li>
    {% endif %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
      <li>
        <a href="{{ part.url }}">{{ part.title }}</a>
      </li>
      {% else %}
        {% if part.title == paginate.current_page %}
        <li class="active"><span>{{ part.title }}</span></li>
        {% else %}
        <li><span>{{ part.title }}</span></li>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if paginate.next %}
    <li class="text"><a href="{{ paginate.next.url }}" title="{{ 'collections.toolbar.next' | t }}"><span>{{ 'collections.toolbar.next' | t }}</span></a></li>
    {% else %}
    <li class="disabled"><span>{{ 'collections.toolbar.next' | t }}</span></li>
    {% endif %}
  </ul>
</div>
{% endif %}